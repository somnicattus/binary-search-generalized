{
	"name": "binary-search-generalized",
	"version": "1.4.2",
	"description": "A generalized binary search implementation in TypeScript",
	"keywords": ["binary search", "typescript", "algorithm"],
	"type": "module",
	"sideEffects": false,
	"engines": {
		"node": ">=20"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": ["dist"],
	"license": "MIT",
	"author": {
		"name": "somnicattus",
		"email": "somnicattus@gmail.com",
		"url": "https://github.com/somnicattus"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/somnicattus/binary-search-generalized"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@tsconfig/strictest": "^2.0.5",
		"@types/bun": "^1.2.20",
		"typescript": "^5.9.2"
	},
	"scripts": {
		"build": "bun tsc --project tsconfig.build.json && bun tsc --project tsconfig.types.json",
		"pack": "npm pack",
		"publish": "bun publish",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage --coverage-reporter=text --coverage-reporter=lcov"
	},
	"packageManager": "bun@1.2.20"
}
